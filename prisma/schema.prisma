generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSettings {
  userId     String @id
  diningPlan String
  initAmount Float
}

model FoodOptions {
  vendor String
  food   String
  amount Float
  id     Int    @id @default(autoincrement())

  @@unique([vendor, food])
}

model Expenditure {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  date      String
  vendor    String
  userId    String
  amount    Float
  food      String
  quantity  Int
}

model WeekHistory {
  userId         String
  week           Int
  year           Int
  totalExpense   Float  @default(0.0)
  dailyBreakdown Json?

  @@unique([userId, week, year])
  @@index([userId])
}
