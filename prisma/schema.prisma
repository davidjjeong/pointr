generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expenditure {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  vendor      String
  userId      String
  amount      Float
  food        String
}

model WeekHistory {
  userId          String
  week            Int
  year            Int
  totalExpense    Float   @default(0.0)
  dailyBreakdown  Json?   // e.g. [12.3, 0, 5.5, ...]

  @@unique([userId, week, year])
  @@index([userId])
}
